package field {	import flash.display.MovieClip;	import flash.events.Event; 	import flash.geom.Rectangle;		public class SnowStorm extends MovieClip {		private var screenArea:Rectangle;		private var snowFlakes:Array;		private var minZ:Number;		private var maxZ:Number;		private var numFlakes:uint;				public var wind:Number;				public function SnowStorm(numFlakes:uint, screenRect:Rectangle, minZ:Number, maxZ:Number) {			screenArea = screenRect;			this.minZ = minZ;			this.maxZ = maxZ;			this.numFlakes = numFlakes;			snowFlakes = new Array(0);			wind = 0;			var snowflake:SnowFlake; 			// if we don't have the maximum number of flakes... 			while (snowFlakes.length<numFlakes) {				// then make a new one!				snowflake = new SnowFlake(screenArea, minZ, maxZ);				snowflake.x = Math.random()*screenArea.width;				snowflake.y = Math.random()*screenArea.height;				// add it to the array of snowflakes				snowFlakes.push(snowflake); 				// and add it to the stage				addChild(snowflake);			}						addEventListener(Event.ENTER_FRAME, frameLoop); 		}				function frameLoop(e:Event) {						// now loop through every snowflake			for(var i:uint = 0; i<snowFlakes.length; i++) {				snowFlakes[i].update(wind); 			}		}	}}